{
  "manifest_version": 3,
  "name": "SurfNote",
  "version": "1.0",
  "description": "Quick and simple note-taking while web surfing!",
  "permissions": [
    "tabs",
    "storage"
  ],
  "icons": {
    "64": "assets/icon64.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "contentScript.js"
      ]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "assets/icon64.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/notes.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
